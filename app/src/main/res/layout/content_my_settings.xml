<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MySettings"
    tools:showIn="@layout/activity_my_settings">

    <TextView
        android:id="@+id/lblDOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblDistance"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/distanceUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/dOptions" />

    <TextView
        android:id="@+id/lblBOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblBearing"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/bearingUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/bOptions" />

</LinearLayout>